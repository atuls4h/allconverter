!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Converter"


    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144'
    = favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114'
    = favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72'
    = favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = javascript_include_tag "application"


  %body
    .navbar.navbar-default.navbar-fixed-top
      .container
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand(href="/") Converter
        .navbar-collapse.collapse.navbar-responsive-collapse
          %ul.nav.navbar-nav.pull-right
            %li= link_to "link 1", "#"         
 
 
   
    .container
      .row
        .col-lg-4
          .nav-side-menu
            .brand Brand Logo
            %i.fa.fa-bars.fa-2x.toggle-btn{"data-target" => "#menu-content", "data-toggle" => "collapse"}
            .menu-list
              %ul#menu-content.menu-content.collapse.out
                %li
                  %a{:href => "#"}
                    %i.fa.fa-dashboard.fa-lg
                    Dashboard
                %li.collapsed{"data-target" => "#products", "data-toggle" => "collapse"}
                  %a{:href => "#"}
                    %i.fa.fa-arrows-h.fa-lg
                    Length
                    %span.arrow
                %ul#products.sub-menu.collapse
                  %li= link_to "Milimeter - Centimeter", scale_mm_cm_path
                  %li= link_to "Centimeter - Foot", scale_cm_ft_path
                  %li= link_to "Cenimeter - Inch", scale_cm_inch_path
                  %li= link_to "Inch - Foot", scale_inch_ft_path
                  %li= link_to "Millimeter - Inch", scale_mm_inch_path
                  %li= link_to "Meter - Foot", scale_mtr_ft_path
                  %li= link_to "Kilometer - Mile", scale_km_mile_path
                  %li= link_to "Inch - Meter", scale_mtr_inch_path
                %li.collapsed{"data-target" => "#service", "data-toggle" => "collapse"}
                  %a{:href => "#"}
                    %i.fa.fa-thermometer-three-quarters.fa-lg
                    Temptature
                    %span.arrow
                %ul#service.sub-menu.collapse
                  %li= link_to "Centigrade - Fahrenhite", scale_mm_cm_path
                  %li= link_to "Centigrade - Kelvin", scale_mm_cm_path
                  %li= link_to "Kelvin - Fahrenhite", scale_mm_cm_path
                %li.collapsed{"data-target" => "#new", "data-toggle" => "collapse"}
                  %a{:href => "#"}
                    %i.fa.fa-car.fa-lg
                    New
                    %span.arrow
                %ul#new.sub-menu.collapse
                  %li New New 1
                  %li New New 2
                  %li New New 3
                %li
                  %a{:href => "#"}
                    %i.fa.fa-user.fa-lg
                    Profile
                %li
                  %a{:href => "#"}
                    %i.fa.fa-users.fa-lg
                    Users

          


  
        .col-lg-8       
          .well
            = bootstrap_flash
            = yield
  .navbar.navbar-default.navbar-fixed-bottom
    .container
      %a.navbar-brand(href="http://www.facebook.com/atul.sah1") Atul Sah
      .navbar-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav.pull-right
          %li= link_to "About", "#"
          %li= link_to "Contact", "#"
          %li= link_to "Feedback", "#"

      
    %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", :rel => "stylesheet"} 

      
        
      

    

    